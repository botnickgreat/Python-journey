# Distance
dist_km = 4677.4
# Convert to miles
dist_mi = dist_km/1.609
# Output the dist_mi value
print("San Francisco - New York distance:", dist_mi, "mi")
# Output the dist_mi value, converted into integer type
print("Converted distance:", int(dist_mi), "mi")
